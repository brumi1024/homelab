[Unit]
Description=Nomad
Wants=network-online.target
After=network-online.target

[Service]
{% if 'server' in group_names %}
User=nomad
Group=nomad
{% if setup_vault_integration %}
EnvironmentFile={{ nomad_data_dir }}/.vault_token
{% endif %}
{% endif %}

ExecReload=/bin/kill -HUP $MAINPID
ExecStart=/usr/bin/nomad agent -config /etc/nomad.d
KillMode=process
KillSignal=SIGINT
LimitNOFILE=65536
LimitNPROC=infinity
Restart=on-failure
RestartSec=10

StartLimitBurst=3
StartLimitInterval=30
TasksMax=infinity

[Install]
WantedBy=multi-user.target
