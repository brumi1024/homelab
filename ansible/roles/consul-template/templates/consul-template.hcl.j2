# https://github.com/hashicorp/consul-template/blob/main/docs/configuration.md#consul-template
vault {
  address = "https://{{ vault_address }}:8200"
  # token = ""
  unwrap_token = false
  renew_token = false

{% if 'server' in group_names %}
  ssl {
    enabled = true
	verify = false
	cert = "{{ vault_tls_dir }}/vault.crt"
	key = "{{ vault_tls_dir }}/key.pem"
  }
{% endif %}
}

{% if 'server' in group_names %}
# self-reload consul-template auth certs
template {
  contents = <<EOF
{% raw %}{{ with secret "pki_int/issue/client" "common_name=ctemplate" "ttl=30d" }}
{{ .Data.private_key }}
{{ end }}
{% endraw %}
EOF
  destination = "{{ consul_template_dir }}/tls/consul_template_key.pem"
  user = "root"
  group = "root"
  perms = 0400
}

template {
  contents = <<EOF
{% raw %}{{ with secret "pki_int/issue/client" "common_name=ctemplate" "ttl=30d" }}
{{ .Data.certificate }}
{{ end }}
{% endraw %}
EOF
  destination = "{{ consul_template_dir }}/tls/consul_template_cert.pem"
  user = "root"
  group = "root"
  perms = 0600
  # reload certs in consul_template auth role
  command = "date; vault write auth/cert/certs/consul_template certificate=@{{ consul_template_dir }}/tls/consul_template_cert.pem"
}
{% endif %}
